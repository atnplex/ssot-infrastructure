###############################################################################
# Universal .gitattributes
# Purpose:
#   - Enforce LF line endings for scripts, configs, and docs.
#   - Preserve binary files exactly as-is.
#   - Ensure consistent behavior across all OS environments.
###############################################################################

# --- Default to LF ---
* text=auto eol=lf

# --- Scripts ---
*.sh       text eol=lf
*.bash     text eol=lf
*.zsh      text eol=lf
*.ksh      text eol=lf
*.csh      text eol=lf
*.py       text eol=lf
*.ps1      text eol=lf

# --- Config & Automation ---
*.yml      text eol=lf
*.yaml     text eol=lf
*.json     text eol=lf
*.env      text eol=lf
*.ini      text eol=lf
*.conf     text eol=lf
*.cfg      text eol=lf
*.toml     text eol=lf
*.xml      text eol=lf
*.properties text eol=lf

# --- Documentation ---
*.md       text eol=lf
*.txt      text eol=lf
*.rst      text eol=lf

# --- Web Assets (text-based) ---
*.html     text eol=lf
*.css      text eol=lf
*.js       text eol=lf

# --- Patch/Diff ---
*.patch    text eol=lf
*.diff     text eol=lf

# --- Binary Assets (no EOL conversion) ---
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.ico      binary
*.svg      binary
*.pdf      binary
*.zip      binary
*.tar      binary
*.gz       binary
*.7z       binary
*.mp4      binary
*.mp3      binary
*.mov      binary

# --- Catch-all for unknown extensions ---
*.* binary

###############################################################################
# --- Unraid User Scripts Specific ---
/boot/config/plugins/user.scripts/scripts/**/script text eol=lf
/boot/config/plugins/user.scripts/scripts/**/*.py text eol=lf
/boot/config/plugins/user.scripts/scripts/**/*.sh text eol=lf

# --- HAOS / Alpine Specific ---
/core-ssh/**/*.sh text eol=lf
/core-ssh/**/*.py text eol=lf

###############################################################################
# Notes:
# - To retroactively normalize existing files after adding this file:
#       git add --renormalize .
#       git commit -m "Normalize line endings per .gitattributes"
###############################################################################
