# Account 2 Caddy — Secrets + Dashboards + Active-Active routes
# CF tunnel connector 2 serves the same domains as connector 1+3

# ── Account-specific ──

# Organizr dashboard (Account 2 only)
dash.atnplex.cloud {
	reverse_proxy organizr:80
}

# BWS (Account 2 only)
bws.atnplex.cloud {
	reverse_proxy bws-server:5000
}

# Headless Builder (Account 2 only)
builder.atnplex.cloud {
	reverse_proxy headless-builder:3000
}

# Suggestarr (Account 2 only)
suggest.atnplex.cloud {
	reverse_proxy suggestarr:5000
}

# Portainer (Account 2 only)
docker.atnplex.cloud {
	reverse_proxy portainer:9443 {
		transport http {
			tls_insecure_skip_verify
		}
	}
}

# Ntfy (Account 2 only)
notify.atnplex.cloud {
	reverse_proxy ntfy:80
}

# AG Proxy fallback
ag.atnplex.cloud {
	reverse_proxy ag-proxy:8045
}

# ── Active-Active (identical routes — CF tunnel distributes) ──

vault.atnplex.cloud {
	reverse_proxy vaultwarden:80
}

cloud.atnplex.cloud {
	reverse_proxy nextcloud:80
}

photos.atnplex.cloud {
	reverse_proxy immich-server:2283
}

docs.atnplex.cloud {
	reverse_proxy paperless:8000
}

links.atnplex.cloud {
	reverse_proxy linkwarden:3000
}
